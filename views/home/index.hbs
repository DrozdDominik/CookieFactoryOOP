<h1>Configure your cookie</h1>
<h2>Select cookie base</h2>
    {{> base-selector}}
    <h2>Select yuor favorites addons</h2>
    {{#each allAddons}}        
        <a href="/configurator/add-addon/{{this.[0]}}" class="btn {{#if (isInArray @root.cookie.addons this.[0])}}btn-disabled{{/if}}">Select {{this.[0]}} for {{pricify this.[1]}} PLN</a>        
    {{/each}}  
{{#if cookie.base}}    
    {{> cookie-preview}}
    {{> addons deleteBtn=true}}
    <a href="/order/summary" class="btn btn-big">Order now!</a>
{{else}}
    <p><strong>Please select base of your cookie to see it's preview and price summary</strong></p>
    <p>{{> base-selector}}</p>
{{/if}}